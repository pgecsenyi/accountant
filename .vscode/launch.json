{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "cwd": "${workspaceRoot}",
            "program": "${file}",
            "env": { "GOPATH": "${cwd}" }
        },
        {
            "name": "Run",
            "type": "go",
            "request": "launch",
            "mode": "exec",
            "linux": {
                "program": "${workspaceRoot}/bin/main"
            },
            "windows": {
                "program": "${workspaceRoot}/bin/main.exe"
            }
        }
    ]
}
